<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/web-context.xml</param-value>
  </context-param>

  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>rest</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>rest</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>init</servlet-name>
    <servlet-class>it.mate.testleaflet.server.servlet.InitServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
 
  <welcome-file-list>
    <welcome-file>store.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>remoteFacade</servlet-name>
    <servlet-class>it.mate.testleaflet.server.services.RemoteFacadeImpl</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>remoteFacade</servlet-name>
    <url-pattern>*.remoteFacade</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>adminFacade</servlet-name>
    <servlet-class>it.mate.testleaflet.server.services.AdminFacadeImpl</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>adminFacade</servlet-name>
    <url-pattern>*.adminFacade</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>uploadServlet</servlet-name>
    <servlet-class>it.mate.testleaflet.server.servlet.UploadServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>uploadServlet</servlet-name>
    <url-pattern>*.uploadServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>downloadServlet</servlet-name>
    <servlet-class>it.mate.testleaflet.server.servlet.DownloadServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>downloadServlet</servlet-name>
    <url-pattern>*.downloadServlet</url-pattern>
  </servlet-mapping>
  
  <!-- 
  <security-constraint>
    <web-resource-collection>
      <url-pattern>*.stickFacade</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
   -->
  
</web-app>