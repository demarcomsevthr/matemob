<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:o="urn:import:it.mate.onscommons.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="app-page-wrapper-panel">
  
    <o:OnsPage>
    
      <o:OnsToolbar>
        <div class="left">
          <o:OnsBackButton/>
        </div>
        <div class="center">Dati account</div>
      </o:OnsToolbar>
      
      <gc:Spacer height="0.6em"/>
      
      <o:OnsList modifier="inset">
      
        <o:OnsListItem>
          <o:OnsTextBox ui:field="fdName" addStyleNames="text-input text-input--transparent" placeholder="Nome"/>
        </o:OnsListItem>
        
        <o:OnsListItem>
          <o:OnsTextBox ui:field="fdEmail" addStyleNames="text-input text-input--transparent" placeholder="Email"/>
        </o:OnsListItem>
        
        <o:OnsListItem modifier="chevron">
          <o:OnsIcon icon="fa-tag" opacity="0.2"/><o:OnsLabel text="Dati spedizione" addStyleNames="app-setting-label"/>
        </o:OnsListItem>
        
      </o:OnsList>
      
      <o:OnsButton text="Save" ui:field="btnSave" addStyleNames="app-save-btn"/>
      
    </o:OnsPage>
    
  </g:HTMLPanel>
  
</ui:UiBinder>