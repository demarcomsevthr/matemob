        <o:OnsButton ui:field="btnEdtAlignLeft" icon="fa-align-left" addStyleNames="app-edit-controlbar-2-btn"/>
        <o:OnsButton ui:field="btnEdtAlignCenter" icon="fa-align-center" addStyleNames="app-edit-controlbar-2-btn"/>
        <o:OnsButton ui:field="btnEdtAlignRight" icon="fa-align-right" addStyleNames="app-edit-controlbar-2-btn"/>
      </g:HorizontalPanel>

      <gc:Spacer ui:field="viewfinder" addStyleNames="app-viewfinder" visible="false" width="4px" height="4px"/>
      
