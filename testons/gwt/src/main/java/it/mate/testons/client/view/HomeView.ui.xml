<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:o="urn:import:it.mate.onscommons.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="app-page-wrapper-panel">
  
    <o:OnsPage addStyleNames="app-home-page">
    
      <o:OnsToolbar>
        <div class="left">
          <o:OnsToolbarButton ui:field="btnMenu" visible="false"><o:OnsIcon icon="fa-bars"/></o:OnsToolbarButton>
        </div>
        <div class="center">MY APP</div>
      </o:OnsToolbar>

      <g:HTML addStyleNames="app-home-presentation">
        <i>Presentazione del servizio</i>
      </g:HTML>
      
      <o:OnsScroller>
      
        <o:OnsList addStyleNames="app-detail-list" ui:field="list">
        
          <o:OnsListItem ui:field="btnDialog" modifier="chevron">
            <span class="app-menu-text">Test Dialog</span>
          </o:OnsListItem>
          
          <o:OnsListItem ui:field="btnDynList" modifier="chevron">
            <span class="app-menu-text">Dynamic list</span>
          </o:OnsListItem>
          
        </o:OnsList>
        
        <!-- excludeFromPageRefresh="true" -->
        <o:OnsButton ui:field="testBtn" text="TEST 1" addStyleNames="app-test-btn" />

        <o:OnsButton ui:field="test2Btn" text="TEST 2" addStyleNames="app-test-btn" />

      </o:OnsScroller>
      
      
    </o:OnsPage>
    
  </g:HTMLPanel>
  
</ui:UiBinder>